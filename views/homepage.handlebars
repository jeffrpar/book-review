{{!-- {{/each}} --}}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book Exchange Platform</title>
  <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.min.js"></script>
</head>

<body>

  <header class="display-flex justify-space-between align-center p-2">
    <nav class="navbar bg-dark border-bottom border-body" data-bs-theme="dark">
      <h1>Welcome to the Book View Platform</h1>
      <!-- Navbar content -->

      <!-- If the user is logged in, show a logout button -->
      {{!-- {{#if loggedIn}}
      <a href="/">Home</a>
      <a href="/login">Login</a>
      <a href="/profile">Profile</a>
      <button id="logout" class="btn-no-style">Logout</button>
      <section class="search-bar">
        <form action="/search" method="GET">
          <input type="text" placeholder="Search for books.." name="search">
          <button type="submit"><i class="fa fa-search"></i></button>
        </form>
      </section>
      {{else}}
      <!-- Otherwise, show a link to login -->
      <a href="/">Home</a>
      <a href="/login">Login</a>
      {{/if}} --}}
    </nav>
  </header>



  <main>
    {{!-- <h1>Welcome to the Book Exchange Platform</h1> --}}

        <section class="featured-books container-fluid">
            {{!-- <h2>Featured Books</h2> --}}

            {{#each books}}
            <div class="card" style="width: 18rem;">
               <a href="/books/{{this.id}}">
                    <img class="card-img-top" src="{{this.book_cover}}" alt="Cover image of {{this.title}}">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                    </div>
                </a>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><p>By {{this.author.author_name}}</p></li>
                </ul>
                <div class="card-body">
                    <a href="/books/{{this.id}}" class="card-link">Details</a>
                 <a href="{{this.review_link}}" class="card-link">Reviews</a>


                </div>
            </div>
            {{/each}}

    </section>
  </main>

  <footer>

  </footer>
</body>

</html>
